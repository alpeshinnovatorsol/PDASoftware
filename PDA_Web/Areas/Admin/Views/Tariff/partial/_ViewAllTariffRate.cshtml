@model IEnumerable<PDAEstimator_Domain.Entities.TariffRateList>
@using PDAEstimator_Domain.Entities;
<style>
    table td {
        word-wrap: break-word;
    }

  

</style>
<table class="table table-bordered  table-striped" id="TariffRateTable">
    <thead>
        <tr>
             <th style="min-width:150px;">
                Tariff ID
            </th>
            <th style="min-width:150px;">
                Terminal
            </th>
            <th style="min-width:150px;">
                Berth
            </th>
            <th style="min-width:150px;">Cargo</th>
            <th style="min-width:110px;">Validity From</th>
            <th style="min-width:110px;">Validity To</th>
            <th style="min-width:110px;">Operation Type</th>
            <th>Status</th>
            <th style="min-width:110px;">Call Type</th>
            <th style="min-width:150px;">Expenses</th>
            <th style="min-width:150px;">Charge Codes</th>
            <th>Vessel Ballast</th>
            <th>Reduced GRT</th>
            <th>Slab</th>
            <th>Slab Increemental</th>
            <th>Slab From</th>
            <th>Slab To</th>
            <th>Range Tariff ID</th>
            <th>Rate</th>
            <th>Currency</th>
            <th style="min-width:150px;">Formula</th>
            <th style="min-width:250px;">Remark</th>
            <th>Tax</th>
            <th>CreatedBy</th>
            <th>CreationDate</th>
            <th>ModifyUserID</th>
            <th>ModifyDate</th>

          
            <th style="min-width:200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TariffRateID)

                </td>
                <td>
                   
                    @if (item.TerminalName == null || item.TerminalName == "")
                    {
                        <span>All</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TerminalName)
                    }

                </td>
                <td>
                    @if (item.BerthName == null || item.BerthName == "")
                    {
                        <span>All</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.BerthName)
                    }

                </td>
                <td>
                    @if (item.CargoName == null || item.CargoName == "")
                    {
                        <span>All</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.CargoName)
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Validity_From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Validity_To)
                </td>
                <td>
                    @if (item.OperationTypeID == 1)
                    {
                        <span>Loading</span>
                    }
                    else if (item.OperationTypeID == 2)
                    {
                        <span>Discharge</span>
                    }
                    else
                    {
                        <span>All</span>
                    }

                </td>
                <td>
                    @if (item.status == 1)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else if (item.status == 2)
                    {
                        <span class="badge badge-danger">Expired</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Pending</span>
                    }

                </td>
                <td>
                    @if (item.CallTypeName == null || item.CallTypeName == "")
                    {
                        <span>All</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.CallTypeName)
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpenseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChargeCodeName)
                </td>
                <td>
                    @if (item.VesselBallast == 0)
                    {
                        <span class="badge badge-success">Not-Applicable</span>
                    }
                    else if (item.VesselBallast == 1)
                    {
                        <span class="badge badge-danger">No</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Yes</span>
                    }

                </td>
                <td>
                    @if (item.Reduced_GRT == 0)
                    {
                        <span class="badge badge-warning">Not-Applicable</span>
                    }
                    else if (item.Reduced_GRT == 1)
                    {
                        <span class="badge badge-danger">No</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Yes</span>
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlabName)
                </td>
                <td>
                    @if (item.SlabIncreemental == 1)
                    {
                        <span class="badge badge-success">Increemental</span>
                    }
                    else 
                    {
                        <span class="badge badge-danger">Not-Increemental</span>
                    }
                    
                </td>
                <td>
                    @if (item.SlabFrom != null)
                        @Convert.ToDecimal(item.SlabFrom).ToString("#,##0.#######")
                    
                </td>
                <td>
                        @if (item.SlabTo != null)
                        @Convert.ToDecimal(item.SlabTo).ToString("#,##0.#######")

                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Range_TariffID)
                </td>
                <td>
                    @item.Rate.ToString("#,##0.#######")
                    @*@Html.DisplayFor(modelItem => item.Rate)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Formula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remark)
                </td>

                <td>
                    @if (item.TaxName == null || item.TaxName == "")
                    {
                        <span>Not Applicable</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.TaxName)
                    }

                </td>
                <td>
                    @if (item.CreatedBy == null)
                    {
                        <span></span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    }

                </td>
                <td>
                    @if (item.CreationDate == null)
                    {
                        <span></span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    }

                </td>
                
                <td>
                    @if (item.ModifyUser == null)
                    {
                        <span></span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ModifyUser)
                    }

                </td>
                <td>
                    @if (item.ModifyDate == null)
                    {
                        <span></span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ModifyDate)
                    }

                </td>

                @if (ViewBag.UserPermissionModel != null)
                {
                    List<UserPermissionRights> userPermissionRights = new List<UserPermissionRights>();
                    List<UserRoleName> userRoleName = new List<UserRoleName>();
                    userPermissionRights = ViewBag.UserPermissionModel;
                    userRoleName = ViewBag.UserRoleName;
                    <td>
                        <a class="btn btn-success btn-sm" onclick="editTariff(@item.TariffRateID ,'copy')">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Copy
                        </a>
                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "Add Tariff" && x.UserRolePermission == "Edit").Count() > 0))
                        {
                            <a class="btn btn-info btn-sm" onclick="editTariff(@item.TariffRateID)">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                        }

                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "Add Tariff" && x.UserRolePermission == "Delete").Count() > 0))
                        {
                            <a class="btn btn-danger btn-sm" onclick="deleteTariff(@item.TariffRateID)">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        }

                    </td>
                }

            </tr>
        }
    </tbody>
</table>
