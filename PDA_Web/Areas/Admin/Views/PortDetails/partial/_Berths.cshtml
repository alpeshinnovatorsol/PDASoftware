@model IEnumerable<PDAEstimator_Domain.Entities.BerthDetails>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            @*<form>*@
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add Berth Details </h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <div class="card-body">
                    <input type="hidden" id="BerthId" name="BerthId" value="">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="PortName">Port</label>
                                @Html.DropDownList("BerthPort", new SelectList(ViewBag.Port, "ID", "PortName"), "Please select", new { @class = "form-control" })

                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="PortName">Terminal</label>
                                @Html.DropDownList("Terminal", new SelectList(ViewBag.Terminals, "ID", "TerminalName"), "Please select", new { @class = "form-control" })

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="BerthCode">Berth Code</label>
                                <input type="text" class="form-control" id="BerthCode" placeholder="Berth Code" onchange="onBerthChange(this.val,1)">
                            </div>
                        </div>
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="BerthName">Berth Name</label>
                                <input type="text" class="form-control" id="BerthName" placeholder="Berth Name" onchange="onBerthChange(this.val,2)">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="MaxLoa">Max LOA</label>
                                <input type="number" class="form-control" id="MaxLoa" placeholder="Max Loa">
                            </div>
                        </div>
                        <div class="col-sm-6">

                            <div class="form-group">
                                <label for="MaxBeam">Max Beam</label>
                                <input type="number" class="form-control" id="MaxBeam" placeholder="Max Beam">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="MaxArrivalDraft">Max Arrival Draft</label>
                                <input type="text" class="form-control" id="MaxArrivalDraft" placeholder="Max Arrival Draft">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="DWT">Max DWT</label>
                                <input type="text" class="form-control" id="DWT" placeholder="Max DWT">
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="DWT">Max Displacement</label>
                                <input type="text" class="form-control" id="MaxDisplacement" placeholder="Max Displacement">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="BerthStatus">
                                <label class="form-check-label" for="BerthStatus">Status</label>
                            </div>

                        </div>


                    </div>
                    <!-- /.card-body -->
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" onclick="BerthsdetailsSave()">Submit</button>
                </div>

            </div>
            @*</form>*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Berth Details List</h3>
                </div>
                <div id="viewAllBerths" class="card-body table-responsive">
                    <table class="table table-bordered table-striped" id="BerthDetailsTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TerminalName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BerthCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BerthName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxLoa)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxBeam)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxArrivalDraft)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DWT)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaxDisplacement)
                                    
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BerthStatus)
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TerminalName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BerthCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BerthName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaxLoa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaxBeam)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaxArrivalDraft)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DWT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaxDisplacement)
                                        </td>
                                        <td>
                                            @if (item.BerthStatus == true)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">In Active</span>
                                            }
                                            @*@Html.DisplayFor(modelItem => item.BerthStatus)*@
                                        </td>
                                        <td>
                                            <a class="btn btn-info btn-sm" onclick="editBerthDetails(@item.ID)">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Edit
                                            </a>
                                            <a class="btn btn-danger btn-sm" onclick="deleteBerthDetails(@item.ID)">
                                                <i class="fas fa-trash">
                                                </i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
