@model IEnumerable<PDAEstimator_Domain.Entities.Roles>
<style>
    table td {
        width: 110px;
        word-wrap: break-word;
    }
</style>
<table class="table table-bordered table-striped" id="RoleTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @if (item.Status == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">In Active</span>
                    }
                    @*@Html.DisplayFor(modelItem => item.CargoTypeStatus)*@
                </td>
                @using PDAEstimator_Domain.Entities;
                @if (ViewBag.UserPermissionModel != null)
                {
                    List<UserPermissionRights> userPermissionRights = new List<UserPermissionRights>();
                    List<UserRoleName> userRoleName = new List<UserRoleName>();
                    userPermissionRights = ViewBag.UserPermissionModel;
                    userRoleName = ViewBag.UserRoleName;
                    <td>
                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "User Roles" && x.UserRolePermission == "Edit").Count() > 0))
                        {
                            <a class="btn btn-info btn-sm" onclick="editRole(@item.RoleID)">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                        }
                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "User Roles" && x.UserRolePermission == "Delete").Count() > 0))
                        {
                            <a class="btn btn-danger btn-sm" onclick="deleteRole(@item.RoleID)">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
