@model IEnumerable<PDAEstimator_Domain.Entities.CityList>
<style>
    table td {
        width: 110px;
        word-wrap: break-word;
    }
</style>
<table class="table table-bordered table-striped" id="CityNameTable">
    <thead>
        <tr>
            @*            @Html.HiddenFor(model => model.CountryId)
            *@
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>

                @using PDAEstimator_Domain.Entities;
                @if (ViewBag.UserPermissionModel != null)
                {
                    List<UserPermissionRights> userPermissionRights = new List<UserPermissionRights>();
                    List<UserRoleName> userRoleName = new List<UserRoleName>();
                    userPermissionRights = ViewBag.UserPermissionModel;
                    userRoleName = ViewBag.UserRoleName;
                    <td>
                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "City" && x.UserRolePermission == "Edit").Count() > 0))
                        {
                            <a class="btn btn-info btn-sm" onclick="editCity(@item.ID)">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                        }
                        @if (userRoleName.Where(x => x.RoleName == "Admin").Count() > 0 || (userPermissionRights.Where(x => x.MenuName == "City" && x.UserRolePermission == "Delete").Count() > 0))
                        {
                            <a class="btn btn-danger btn-sm" onclick="deleteCity(@item.ID)">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
