@model IEnumerable<PDAEstimator_Domain.Entities.BerthDetails>
<style>
    table td {
        width: 110px;
        word-wrap: break-word;
    }
</style>
<table class="table table-bordered table-striped" id="BerthNameTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BerthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BerthStatus)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BerthName)
                </td>
                <td>
                    @if (item.BerthStatus == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">In Active</span>
                    }
                    @*@Html.DisplayFor(modelItem => item.CargoTypeStatus)*@
                </td>

                <td>
                    <a class="btn btn-info btn-sm" onclick="editBerth(@item.ID)">
                        <i class="fas fa-pencil-alt">
                        </i>
                        EditEdit
                    </a>
                    <a class="btn btn-danger btn-sm" onclick="deleteBerth(@item.ID)">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
