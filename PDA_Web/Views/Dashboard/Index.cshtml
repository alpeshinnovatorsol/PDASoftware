@section Scripts
    {
    <script>

        var chartLabels;
        var chartData;

        const ctx = document.getElementById('myChart');

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: '# of Votes',
                    data: chartData,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            loadData();
            $("#PDAEstimator").DataTable({
                order: [[0, 'desc']],
                scrollX: true,
                scrollCollapse: true,
                scrollY: '400px',
                fixedHeader: {
                    header: true,
                },
                "responsive": false, "lengthChange": false, "autoWidth": false,
                "buttons": [{
                    extend: 'excel',
                    text: 'Export Results',
                    className: 'btn btn-default',
                    exportOptions: {
                        columns: 'th:not(:last-child)'
                    }
                }]
            }).buttons().container().appendTo('#PDAEstimator_wrapper .col-md-6:eq(0)');

        });
        function loadData() {
            var Padestimator;

            $.ajax({
                type: "GET",
                url: "/Dashboard/LoadAll",
                dataType: "HTML",
                success: function (data) {
                    $("#customer").html(data);
                },
                error: function () {
                }
            });

